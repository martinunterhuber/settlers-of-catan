                android:layout_height="120px"
                android:paddingRight="10dp"
                app:srcCompat="@drawable/clayhex" />

        </TableRow>

        <TextView
            android:id="@+id/txt_settlement_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
